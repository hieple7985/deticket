// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id                    String @id @default(uuid())
  hash                  String
  source                String
  parameters_entrypoint String
  parameters_value      Json?
}

model TicketTokens {
  id            String           @id @default(uuid())
  name          String
  token_id      Int              @unique
  owner_address String
  collectionId  String
  collection    TicketCollection @relation(fields: [collectionId], references: [id])
}

model TicketCollection {
  id                    String         @id @default(uuid())
  ticket_collection_id  Int            @unique
  owner                 String
  name                  String
  purchase_amount_mutez Int
  cover_image           String
  supply                Int
  max_supply            Int
  balance_mutez         Int
  datetime              DateTime
  ticket_tokens         TicketTokens[]
  location              String
  ticket_type           String
  verified              Boolean
}

model UserAccessToken {
  id         String   @id @default(uuid())
  address    String   @unique
  token      String   @unique
  expires_at DateTime
}

model UserNonce {
  id      String @id @default(uuid())
  address String @unique
  nonce   String @unique
}

model TicketAccessToken {
  id              String @id @default(uuid())
  owner_address   String
  ticket_token_id Int    @unique
  token           String @unique
}

model GateScanConfirmation {
  id              String   @id @default(uuid())
  ticket_token_id Int      @unique
  address         String
  entry_at        DateTime
}
