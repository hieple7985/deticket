// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id                    String @id @default(uuid())
  hash                  String
  source                String
  parameters_entrypoint String
  parameters_value      Json?
}

model TicketTokens {
  id            String           @id @default(uuid())
  name          String
  token_id      Int              @unique
  owner_address String
  collectionId  String
  collection    TicketCollection @relation(fields: [collectionId], references: [id])
}

model TicketCollection {
  id                    String         @id @default(uuid())
  ticket_collection_id  Int            @unique
  owner                 String
  name                  String
  purchase_amount_mutez Int
  cover_image           String
  max_supply            Int
  datetime              DateTime
  ticket_tokens         TicketTokens[]
}
